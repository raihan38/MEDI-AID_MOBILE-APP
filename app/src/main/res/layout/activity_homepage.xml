<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lblue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:src="@drawable/healthcarecover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/ambulence"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ambulanceimg"
                        android:layout_width="match_parent"
                        android:layout_height="169dp"
                        android:layout_gravity="top"
                        android:background="@color/lblue"
                        android:src="@drawable/ambulence" />

                    <TextView
                        android:id="@+id/ambulancetxt"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/unispacebd"
                        android:gravity="center"
                        android:text="AMUBULANCE"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hospital"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/hospitalimg"
                        android:layout_width="match_parent"
                        android:layout_height="169dp"
                        android:layout_gravity="top"
                        android:background="@color/lblue"
                        android:src="@drawable/imagehos" />

                    <TextView
                        android:id="@+id/hospitaltxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/unispacebd"
                        android:gravity="center"
                        android:text="HOSPITAL"
                        android:textColor="@color/black" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/bmi"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bmiimg"
                        android:layout_width="match_parent"
                        android:layout_height="169dp"
                        android:layout_gravity="top"
                        android:src="@drawable/bmi111"
                        android:background="@color/lblue"
                        />

                    <TextView
                        android:id="@+id/bmitxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:text="BMI CALCULATOR"
                        android:fontFamily="@font/unispacebd"
                        android:textColor="@color/black"/>


                </LinearLayout>






            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/medialarm"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medialarmimg"
                        android:layout_width="match_parent"
                        android:layout_height="169dp"
                        android:layout_gravity="top"
                        android:src="@drawable/alarm111"
                        android:background="@color/lblue"/>

                    <TextView
                        android:id="@+id/medialarmtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/unispacebd"
                        android:gravity="center"
                        android:text="MEDI CLOCK"
                        android:textColor="@color/black" />


                </LinearLayout>






            </androidx.cardview.widget.CardView>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/symptom"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/symptomimg"
                        android:layout_width="match_parent"
                        android:layout_height="169dp"
                        android:layout_gravity="top"
                        android:src="@drawable/symptoms"
                        android:background="@color/lblue"
                        />

                    <TextView
                        android:id="@+id/symptomtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:text="CHECK SYMPTOMS"
                        android:fontFamily="@font/unispacebd"
                        android:textColor="@color/black"/>


                </LinearLayout>






            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/doctor"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/doctorimg"
                        android:layout_width="match_parent"
                        android:layout_height="169dp"
                        android:layout_gravity="top"
                        android:src="@drawable/doc"
                        android:background="@color/lblue"/>

                    <TextView
                        android:id="@+id/doctortxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/unispacebd"
                        android:gravity="center"
                        android:text="CONSULT DOCTOR"
                        android:textColor="@color/black" />


                </LinearLayout>






            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </LinearLayout>




</ScrollView>